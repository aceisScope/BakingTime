<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/material_card_gutter"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_list_single_line_without_avatar_normal_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_step_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/material_list_text_first_position_margin_start"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap"
            tools:text="Step One:  "/>

        <ImageView
            android:id="@+id/icon_step_play"
            android:layout_marginRight="@dimen/material_list_text_last_position_margin_end"
            android:layout_width="@dimen/material_list_icon_size"
            android:layout_height="@dimen/material_list_icon_size"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:tint="@color/colorPrimaryDark"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>